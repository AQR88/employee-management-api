{
  "name": "employee-management-api",
  "version": "1.0.0",
  "description": "API для управления информацией о сотрудниках компании",
  "main": "app.js",
  "scripts": {
    "build-prod": "npm ci && NODE_ENV=production npx sequelize db:migrate && NODE_ENV=production npx sequelize db:seed:all",
    "build-dev": "npm ci && NODE_ENV=development npx sequelize db:migrate && NODE_ENV=development npx sequelize db:seed:all",
    "start": "cross-env NODE_ENV=production node app.js",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "test": "mocha tests/**/*.test.js --exit",
    "seed-db": "cross-env NODE_ENV=production npx sequelize-cli db:seed:all",
    "clear-db": "cross-env NODE_ENV=production npx sequelize-cli db:seed:undo:all",
    "migrate": "cross-env NODE_ENV=production npx sequelize db:migrate"
  },
  "keywords": [
    "express",
    "nodejs",
    "api",
    "employees",
    "management",
    "sequelize",
    "postgresql"
  ],
  "author": "Alex",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "node-schedule": "^2.1.1",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3"
  }
}
